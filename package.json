{
  "name": "magic-pixels",
  "version": "0.0.1",
  "description": "A WebGL library",
  "repository": "terabaud/magic-pixels",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "npm run lint:js -s && npm run lint:pkg -s",
    "lint:js": "eslint src",
    "lint:pkg": "package-check",
    "lint:fix": "eslint --fix src",
    "test": "jest",
    "build:types": "tsc -d --emitDeclarationOnly",
    "build:js": "node build",
    "build:docs": "npx typedoc src/index.ts && touch docs/.nojekyll",
    "build": "rm -rf dist && npm run build:types -s && npm run build:js -s && npm run build:docs -s",
    "prepublishOnly": "npm run lint -s && npm test -s && npm run build"
  },
  "keywords": [
    "webgl",
    "utility-library"
  ],
  "author": "Lea Rosema",
  "license": "MIT",
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "esbuild": "^0.9.5",
    "esbuild-plugin-glsl": "^1.0.3",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "jest-webgl-canvas-mock": "^0.2.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "typedoc": "^0.20.36"
  }
}
